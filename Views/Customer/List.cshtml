@using MVCHOT2.Models;
@model List<Customer>
@{
	ViewData["Title"] = "List";
	Layout = "_Layout";
}
<table class="table table-bordered">
	<thead>
		<tr>
			<th>
				First Name
			</th>
			<th>
				Last Name
			</th>
			<th>
				Address
			</th>
			<th>
				City
			</th>
			<th>
				State
			</th>
			<th>
				Zip Code
			</th>
			<th>
				Phone
			</th>
			<th>

			</th>
			<th>

			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var customer in Model)
		{
			<tr>
				<td>
					@customer.CustomerFirstName
				</td>
				<td>
					@customer.CustomerLastName
				</td>
				<td>
					@customer.CustomerStreetAddress
				</td>
				<td>
					@customer.CustomerCity
				</td>
				<td>
					@customer.CustomerState
				</td>
				<td>
					@customer.CustomerZipCode
				</td>
				<td>
					@customer.CustomerPhoneNumber
				</td>
				<td>
					<a asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.CustomerID" class="btn btn-secondary">Edit</a>
				</td>
				<td>
					<a asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.CustomerID" class="btn btn-secondary">Delete</a>
				</td>

			</tr>
		}
	</tbody>
</table>
<a asp-controller="Customer" asp-action="Add" class="btn btn-secondary">Add Customer</a>
