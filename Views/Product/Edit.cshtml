@using MVCHOT2.Models;
@model Product
@{
	string title = ViewBag.Action + " Product";
	ViewData["Title"] = title;
	Layout = "_Layout";
}
<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="mb-3">
		<label asp-for="ProductName" class="form-label">Name</label>
		<input asp-for="ProductName" class="form-control" />
	</div>
	<div class="mb-3">
		<label asp-for="ProductDescShort" class="form-label">Short Description</label>
		<input asp-for="ProductDescShort" class="form-control" />
	</div>
	<div class="mb-3">
		<label asp-for="ProductDescLong" class="form-label">Long Description</label>
		<input asp-for="ProductDescLong" class="form-control" />
	</div>

	<div class="mb-3">
		<label asp-for="ProductImage" class="form-label">Image</label>
		<input asp-for="ProductImage" class="form-control" />
	</div>
	<div class="mb-3">
		<label asp-for="ProductPrice" class="form-label">Price</label>
		<input asp-for="ProductPrice" class="form-control" />
	</div>
	<div class="mb-3">
		<label asp-for="ProductQty" class="form-label">Quantity</label>
		<input asp-for="ProductQty" class="form-control" />
	</div>

	<div class="mb-3">
		<label asp-for="CategoryID" class="form-label">Category</label>
		<select asp-for="CategoryID" class="form-control">
			<option value="">Select A Category</option>
			@foreach (Category c in ViewBag.Categories)
			{
				<option value="@c.CategoryID">@c.CategoryName</option>
			}
		</select>
	</div>


	<input type="hidden" asp-for="ProductID" />

	<button type="submit" class="btn btn-primary">Save</button>

	<a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>


</form>