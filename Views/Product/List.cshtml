@using MVCHOT2.Models;
@model List<Product>
@{
	ViewData["Title"] = "List";
	Layout = "_Layout";
}
<table class="table table-bordered">
	<thead>
		<tr>
			<th>
				Name
			</th>
			<th>
				Short Description
			</th>
			<th>
				Long Description
			</th>
			<th>
				Image
			</th>
			<th>
				Price
			</th>
			<th>
				Quantity
			</th>
			<th>
				Category
			</th>
			<th>

			</th>
			<th>

			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var product in Model)
		{
			<tr>
				<td>
					<a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductID">@product.ProductName</a>
				</td>
				<td>
					@product.ProductDescShort
				</td>
				<td>
					@product.ProductDescLong
				</td>
				<td>
					@product.ProductImage
				</td>
				<td>
					@product.ProductPrice
				</td>
				<td>
					@product.ProductQty
				</td>
				<td>
					@product.CategoryID
				</td>
				<td>
					<a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductID" class="btn btn-secondary">Edit</a>
				</td>
				<td>
					<a asp-controller="Product" asp-action="Delete" asp-route-id="@product.ProductID" class="btn btn-secondary">Delete</a>
				</td>

			</tr>
		}
	</tbody>
</table>
<a asp-controller="Product" asp-action="Add" class="btn btn-secondary">Add Product</a>
