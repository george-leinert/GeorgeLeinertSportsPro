@using MVCHOT2.Models;
@model List<Category>
@{
	ViewData["Title"] = "List";
	Layout = "_Layout";
}
<table class="table table-bordered">
	<thead>
		<tr>
			<th>
				Name
			</th>
			<th>

			</th>
			<th>

			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var category in Model)
		{
			<tr>
				<td>
					@category.CategoryName
				</td>

				<td>
					<a asp-controller="Category" asp-action="Edit" asp-route-id="@category.CategoryID" class="btn btn-secondary">Edit</a>
				</td>
				<td>
					<a asp-controller="Category" asp-action="Delete" asp-route-id="@category.CategoryID" class="btn btn-secondary">Delete</a>
				</td>

			</tr>
		}
	</tbody>
</table>
<a asp-controller="Category" asp-action="Add" class="btn btn-secondary">Add Category</a>
